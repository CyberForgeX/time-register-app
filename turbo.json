{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "image": "node:16-alpine",
      "environment": {
        "CI": "true",
        "NODE_ENV": "production"
      },
      "steps": [
        {
          "name": "Checkout",
          "run": "checkout"
        },
        {
          "name": "Install Dependencies",
          "run": "pnpm ci"
        },
        {
          "name": "Build",
          "run": "pnpm run build"
        }
      ],
      "outputs": [
        ".next/**",
        "!**/*.tsbuildinfo"
      ]
    },
    "lint": {
      "image": "node:16-alpine",
      "steps": [
        {
          "name": "Checkout",
          "run": "checkout"
        },
        {
          "name": "Install Dependencies",
          "run": "pnpm ci"
        },
        {
          "name": "Lint",
          "run": "pnpm run lint"
        }
      ]
    },
    "test": {
      "image": "node:16-alpine",
      "steps": [
        {
          "name": "Checkout",
          "run": "checkout"
        },
        {
          "name": "Install Dependencies",
          "run": "pnpm ci"
        },
        {
          "name": "Test",
          "run": "pnpm test"
        }
      ],
      "artifacts": [
        {
          "name": "Test Results",
          "paths": ["coverage/**"]
        }
      ]
    }
  }
}