{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "target": "esnext",
    "module": "module"
  },
"include": [
  "__tests__/**/*.ts",
  "__tests__/**/*.tsx",
  "__tests__/**/*.mjs"
],
  "exclude": ["node_modules"]
}
